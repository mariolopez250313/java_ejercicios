/*
 Leer un número por teclado e indica si es divisibles entre 2 (resto = 0). Si no lo es
 tambien se debe indicar.
 */
package google_5;

import java.util.Scanner;


public class Google_5 {

    
    public static void main(String[] args) {
        // TODO code application logic here
        
        Scanner teclado = new Scanner(System.in);
        
        //Declaracion de variables
        int num;
        
        //Ingresamos los números
        System.out.println("Ingrese número");
        num = teclado.nextInt();
        
        if (num % 2 == 0){
            System.out.println("El numero " + num + " es divisible entre 2");
        }else
            System.out.println("El numero "+ num + " no es divisible ente 2");
        
        teclado.close();
    }
    
}
