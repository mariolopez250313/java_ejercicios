/*
   Realiza un programa que lea 3 datos de entrada A, B y C. Estos corresponden a las dimenciones
   de los lados de un triangulo. El programa debe determinar que tipo de triangulo es,
   teniendo encuenta lo siguiente:
    - Si se cumple p칤tagoras entonces es triangulo rect치ngulo.
    - Si s칩lo dos lados del triangulo son iguales entonces es is칩sceles.
    - Si los 3 lados son iguales entonces es equil치tero.
    - si no se cumple ninguna de las condiciones anteriores, es escaleno
 */
package google_11;

import java.util.Scanner;


public class Google_11 {

    
    public static void main(String[] args) {
        // TODO code application logic here
        
        //Metodo Scanner
        Scanner teclado = new Scanner(System.in);
        
        //Declaraci칩n de variables
        int a, b, c;
        
        //Datos de entrada
        System.out.println("Ingrese el valor entero de los tres lados del tiengulo,"
                + "para as칤 verificar su clasificaci칩n.");
        System.out.println("\nIngrese primer lado del tri치ngulo");
        a = teclado.nextInt();
        System.out.println("\nIngrese segundo segundo lado del tri치ngulo");
        b = teclado.nextInt();
        System.out.println("\nIngrese tercer lado del tri치ngulo");
        c = teclado.nextInt();
        
        //Datos del proceso y de salida
        if((Math.pow(a, 2) == (Math.pow(b, 2) + Math.pow(c, 2))) ||
            (Math.pow(b, 2) == (Math.pow(a, 2) + Math.pow(c, 2))) ||
                (Math.pow(c, 2) == (Math.pow(b, 2) + Math.pow(a, 2)))){ // la suma de los dos catetos(b,c) es igual a la hipotenusa(a)
            System.out.println("Es un tri치ngulo Rect치ngulo, el cual cumple con el teorema de pit치goras");
        }else if((a == b) && (c != b)){ // Dos lados iguales uno diferente
            System.out.println("Es un tri치ngulo Is칩sceles");
        }else if((a == b) && (b == c)){ // tres lados iguales
            System.out.println("Es un tri치ngulo Equil치tero");
        }else if((a != b) && (a != c) && (b != c)){ // tres lados diferentes
            System.out.println("Es un tri치ngulo Escaleno");
        }
        /* Otra forma de indicar el trabgulo escaleno sin tener que realizar c칩digo
           游녤游낖 System.out.println("Es un trangulo escaleno"); 游녣游낖
        */   
        
        teclado.close();
        
    }
    
}
